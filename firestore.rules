rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // HELPER FUNCTIONS
    // ========================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }

    function isManager() {
      return isAuthenticated() && getUserRole() == 'manager';
    }

    function isTechnician() {
      return isAuthenticated() && getUserRole() == 'technician';
    }

    function isCustomer() {
      return isAuthenticated() && getUserRole() == 'customer';
    }

    // ========================================
    // USERS COLLECTION
    // ========================================

    match /users/{userId} {
      // Customers can read their own profile, Technicians and Admins can read all users.
      allow read: if (isCustomer() && isOwner(userId)) || isTechnician() || isAdmin();

      // Users can create their own profile, and Admins can create users.
      allow create: if (isAuthenticated() && isOwner(userId)) || isAdmin();

      // Users can update limited fields of their own profile, and Admins can update any user.
      allow update: if (isAuthenticated() && isOwner(userId) &&
                        request.resource.data.diff(resource.data).affectedKeys()
                        .hasOnly(['name', 'phone', 'avatarUrl'])) || isAdmin();

      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // ========================================
    // WORK ORDERS COLLECTION
    // ========================================

    match /workOrders/{workOrderId} {
      // Customers can read their own work orders, Technicians can read/write their assigned work orders, and Admins/Managers can read/write all work orders.
      allow read, write: if (isCustomer() && resource.data.customerId == request.auth.uid) || 
                         (isTechnician() && resource.data.assignedTo == request.auth.uid) || 
                         isAdmin() || isManager();
    }

    // ========================================
    // PRODUCTS COLLECTION
    // ========================================

    match /products/{productId} {
      // Public read access
      allow read: if true;
      // Only admins can write
      allow write: if isAdmin();
    }

    // ========================================
    // QUEUE COLLECTION
    // ========================================

    match /queueEntries/{entryId} {
      // Customers can read their own queue entries, Technicians, Admins and Managers can read/write all queue entries.
      allow read, write: if (isCustomer() && resource.data.customerId == request.auth.uid) || 
                         isTechnician() || isAdmin() || isManager();
    }

    // ========================================
    // MOTORCYCLES COLLECTION
    // ========================================

    match /motorcycles/{motorcycleId} {
      // Public read access
      allow read: if true;
      // Only admins can write
      allow write: if isAdmin();
    }

    // ========================================
    // USER VEHICLES COLLECTION
    // ========================================

    match /userVehicles/{vehicleId} {
      // Customers can read their own vehicles, Technicians, Admins and Managers can read/write all vehicles.
      allow read: if (isCustomer() && resource.data.userId == request.auth.uid) || isTechnician() || isAdmin() || isManager();
      allow write: if isTechnician() || isAdmin() || isManager();
    }

    // ========================================
    // NOTIFICATIONS COLLECTION
    // ========================================

    match /notifications/{notificationId} {
      // Users can read and update their own notifications, Technicians, Admins and Managers can create notifications, and Admins can delete notifications.
      allow read, update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isTechnician() || isAdmin() || isManager();
      allow delete: if isAdmin();
    }

    // ========================================
    // APPOINTMENTS COLLECTION
    // ========================================

    match /appointments/{appointmentId} {
      // Customers can read their own appointments, Technicians can read/write their assigned appointments, and Admins/Managers can read/write all appointments.
      allow read, write: if (isCustomer() && resource.data.customerId == request.auth.uid) || 
                         (isTechnician() && resource.data.assignedTo == request.auth.uid) || 
                         isAdmin() || isManager();
    }


    // ========================================
    // CACHE COLLECTION
    // ========================================

    match /cache/{cacheId} {
      // Users can read and write their own cache entries
      allow read, write: if resource.data.userId == request.auth.uid;
    }

    // ========================================
    // NOTIFICATION TEMPLATES COLLECTION
    // ========================================

    match /notificationTemplates/{templateId} {
      // All authenticated users can read notification templates
      allow read: if true;
    }

    // ========================================
    // SERVICES COLLECTION
    // ========================================

    match /services/{serviceId} {
      // Admins and Managers can read/write services, Technicians and Customers can read services.
      allow read: if isTechnician() || isAdmin() || isManager() || isCustomer();
      allow write: if isAdmin() || isManager();
    }

    // ========================================
    // CATEGORIES COLLECTION
    // ========================================

    match /categories/{categoryId} {
      // Technicians, Admins, Managers and Customers can read categories
      allow read: if isTechnician() || isAdmin() || isManager() || isCustomer();
      // Only admins can write
      allow write: if isAdmin();
    }

    // ========================================
    // MAINTENANCE REMINDERS COLLECTION
    // ========================================

    match /maintenanceReminders/{reminderId} {
      // Customers can read their own reminders, Technicians, Admins and Managers can read all reminders.
      allow read: if (isCustomer() && resource.data.customerId == request.auth.uid) || isTechnician() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager';
      // Only admins can write
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ========================================
    // WORK SESSIONS COLLECTION
    // ========================================

    match /workSessions/{sessionId} {
      // Technicians, Admins and Managers can read/write work sessions.
      allow read, write: if isTechnician() || isAdmin() || isManager();
    }

    // ========================================
    // EMPLOYEE SCHEDULES COLLECTION
    // ========================================

    match /employeeSchedules/{scheduleId} {
      // Technicians, Admins and Managers can read employee schedules.
      allow read: if isTechnician() || isAdmin() || isManager();
      // Only admins and managers can write
      allow write: if isAdmin() || isManager();
    }

    // ========================================
    // TIME ENTRIES COLLECTION
    // ========================================

    match /timeEntries/{entryId} {
      // Technicians can read/write their own time entries, and Admins/Managers can read/write all time entries.
      allow read, write: if (isTechnician() && resource.data.technicianId == request.auth.uid) || isAdmin() || isManager();
    }

    // ========================================
    // HEALTH CHECK COLLECTION
    // ========================================

    match /health/{healthId} {
      // Authenticated users can read health status
      allow read: if isAuthenticated();
      // Only system functions can write
      allow write: if false;
    }
  }
}